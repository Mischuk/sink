.m_sidebar-filters
  margin-bottom 30px
  box-shadow 0 6px 16px rgba(0,0,0,.1)
  border solid 1px #eeefef
  .filter-options
    clearfix()
    padding 18px 20px
    .reset,
    .submit
      anim()
      padding 10px 15px
      border-radius $radius
      font-size 12px
      text-transform uppercase
      background #fff
      color $blue
      border 1px solid $blue
      width 47%
      &:hover
        background $blue
        color #fff
    .submit
      float left
    .reset
      float right


  .dropdown-aside
    border-bottom solid 1px #eeefef
    .dropdown-aside-header
      a
        position relative
        display block
        font-size 14px
        color #000
        padding 18px 20px
        &:hover
          color $blue
        &:after
          anim()
          content ''
          sprite()
          width 7px
          height 4px
          background-position -300px 0
          position absolute
          right 20px
          top 50%
          margin-top -2px
          transform rotate(180deg)
    .box
      display none
      padding 0 20px 20px
      .checkbox
        & + .checkbox
          margin-top 10px
    &.open
      .dropdown-aside-header a:after
        transform rotate(360deg)
      .box
        display block
  .price-range
    margin-bottom 10px
    .noUi-target
      background #d1d9da
      border-radius 0
      border none
      box-shadow none
    .noUi-horizontal
      height 4px
      .noUi-handle
        left -9px
    .noUi-connect
      background $red
      box-shadow none
    .noUi-handle
      width 16px
      height 16px
      border 2px solid #e97072
      box-shadow 0 2px 2px rgba(0,0,0,.1)
      border-radius 50%
      &:after,
      &:before
        display none
    .noUi-pips-horizontal
      height 10px
      padding 0
      top -3px
      // z-index 10
    .noUi-marker-horizontal.noUi-marker-large,
    .noUi-marker-horizontal.noUi-marker
      height 10px
      background #d1d9da
    .noUi-value-horizontal
      font-size 12px
      font-weight normal
      color #999
      top -20px
      transform none
      &:last-child
        left auto !important
        right 0 !important
  .price-inputs
    clearfix()
    margin-bottom 40px
    input
      width 48%
      height 36px
      border-radius $radius
      border 1px solid #d1d9da
      padding 0 10px
      font-size 12px
      color #555
    #sidebar-input-start
      float left
    #sidebar-input-finish
      float right

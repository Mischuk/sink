// Popup: fast buy
div(id="popup-fast" class="zoom-anim-dialog mfp-hide popup")
  .m_header-cart
    h2 Купить в 1 клик
    .total-items
      .item
        .image: a(href="#"): img(src="images/content/cart/1.png" alt="")
        .desc
          .title: a(href="#") Душевая кабина Jacuzzi Frame
          .details
            .amt <span class="sum-value">6 299.10</span> x 1 шт.
            .sum 6 299.10
    .total-sum
      span.label Общая сумма:
      span.sum 12 598.20
  form
    .form-row
      input(type="text" placeholder="Как Вас зовут?" autocomplete="off")
    .form-row
      input(type="tel" placeholder="Ваш телефон" autocomplete="off")
    .form-row
      textarea(placeholder="Комментарий к заказу")
    .form-row
      button(type="submit") Отправить заявку

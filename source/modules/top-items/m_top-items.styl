.m_top-items
  background #fff
  padding 50px 0 40px
  min-height 1000px
  .slick-slider
    position static
  .slick-arrow
    position absolute
    top 0
    width 13px
    height 20px
    background none
    border none
    text-indent -9999px
    sprite()
    &.slick-disabled
      opacity .25
      cursor default
    &.slick-next
      right 25px
      background-position -250px -250px
      &:hover
        background-position -250px -300px
    &.slick-prev
      background-position -200px -250px
      right 55px
      &:hover
        background-position -200px -300px
  .top-items-nav
    text-align left
    margin-bottom 20px
    padding-right 60px
    padding-left 10px
    @media SM
      text-align center
      padding-left 60px
    a
      anim()
      color #999
      font-size 16px
      font-weight bold
      text-transform uppercase
      border-bottom 1px dashed #999
      display inline-block
      vertical-align middle
      line-height 1
      margin-right 10px
      margin-bottom 10px
      @media SM
        font-size 24px
        margin-right 10px
        margin-left 10px
      &.current
        color #000
        border-color #fff
        cursor default
  .top-items-content
    .slide
      padding 10px
    .top-item-carousels
      &.disabled
        display none
      &.enabled
        display block
    & + .action
      margin-top 30px
      text-align center
      a
        anim()
        position relative
        display inline-block
        vertical-align middle
        padding 20px 60px
        background #fff
        font-size 16px
        color $blue
        border-radius 30px
        box-shadow 0 6px 16px rgba(0,0,0,.1)
        .icon-details
          display inline-block
          vertical-align middle
          background: url('../images/sprite.png') no-repeat -150px 0;
          width: 12px;
          height: 7px;
          margin-left 5px
        &:hover
          color #000
          box-shadow 0 6px 32px rgba(0,0,0,.2)
  &.bottom
    position relative
    padding-top 0
    .slick-arrow
      top 50px
    .section-title
      margin-bottom 45px
      text-align left
      font-weight bold
      text-transform uppercase
      font-size 20px
      padding-left 10px
      padding-right 10px
      @media XS
        font-size 24px
      span
        display block
        padding-top 45px
        border-top 1px solid #eeefef
        padding-right 80px

.top-items-loader
  width: 100px;
  height: 100px;
  border-radius: 100%;
  position absolute
  left 50%
  margin-left -50px
  top 200px
  z-index 10
  display none
  &.show
    display block

.top-items-loader span
  display: inline-block;
  width: 20px;
  height: 20px;
  border-radius: 100%;
  background-color $blue
  margin: 35px 5px;
  opacity: 0;

.top-items-loader span:nth-child(1)
  animation: opacitychange 1s ease-in-out infinite;
.top-items-loader span:nth-child(2)
  animation: opacitychange 1s ease-in-out 0.33s infinite;
.top-items-loader span:nth-child(3)
  animation: opacitychange 1s ease-in-out 0.66s infinite;
@keyframes opacitychange
  0%, 100%
    opacity: 0;
  60%
    opacity: 1;
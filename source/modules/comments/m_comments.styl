.m_comments
  position relative
  .filters
    display none
    @media SM
      display block
      float right
      width 180px
      padding-left 20px
      .f-label
        padding 10px 0
        font-size 12px
        font-weight bold
        line-height 15px
        text-transform uppercase
  .body
    @media SM
      padding-right 180px
  .m_comments-post
    margin-top 30px
  .header
    overflow hidden
    margin-top 15px
    line-height 15px
    padding 10px 0
    margin-top 30px
    margin-bottom 5px
    .sort
      float left
      text-transform uppercase
      font-size 12px
      .label
        display inline-block
        vertical-align middle
        color #999
        margin-right 10px
      a
        display inline-block
        vertical-align middle
        padding 0 5px
        color $blue
        span
          display inline-block
          vertical-align middle
          line-height 1
          border-bottom 1px dashed $blue
        i
          display inline-block
          vertical-align middle
          width 5px
          height 9px
          sprite()
          background-position -250px -400px
          margin-left 2px
          margin-top -2px
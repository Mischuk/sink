.m_contacts
  margin-top 20px
  @media SM
    clearfix()
    margin-top 30px
  .contacts-info
    margin-bottom 20px
    @media SM
      float left
      width 50%
      padding-top 30px
    .row
      & + .row
        margin-top 10px
    .label
      color #999
    a
      color $blue
      &:hover
        color #000
  .contacts-form
    background url("../images/patterns/pattern3.jpg") repeat 0 0
    padding 20px
    border 1px solid #e5ebec
    @media SM
      float left
      width 50%
    .title
      font-weight bold
      text-transform uppercase
      font-size 16px
      padding-bottom 15px
      border-bottom 1px solid #dce4e5
      margin-bottom 20px
    .form-row
      clearfix()
      .input
        @media XS
          float left
          width 48%
        & + .input
          margin-top 20px
          @media XS
            margin-top 0
            margin-left 4%
      & + .form-row
        margin-top 20px
      textarea,
      input
        background #fff
        anim()
        border 1px solid $border
        border-radius $radius
        padding 0 10px
        background #fff
        font-size 16px
        width 100%
        &:focus
          font-weight normal
          border-color #fff
          box-shadow 0 6px 32px rgba(0,0,0,.2)
      input
        height 40px
      textarea
        padding 10px
        min-height 100px
        resize none
      .submit
        display inline-block
        vertical-align middle
        text-align center
        width 115px
        height 35px
        line-height 35px
        border-radius $radius
        font-size 12px
        text-transform uppercase
        border none
        color #fff
        background: rgba(57,144,236,1);
        background: -moz-linear-gradient(top, rgba(57,144,236,1) 0%, rgba(20,118,223,1) 100%);
        background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(57,144,236,1)), color-stop(100%, rgba(20,118,223,1)));
        background: -webkit-linear-gradient(top, rgba(57,144,236,1) 0%, rgba(20,118,223,1) 100%);
        background: -o-linear-gradient(top, rgba(57,144,236,1) 0%, rgba(20,118,223,1) 100%);
        background: -ms-linear-gradient(top, rgba(57,144,236,1) 0%, rgba(20,118,223,1) 100%);
        background: linear-gradient(to bottom, rgba(57,144,236,1) 0%, rgba(20,118,223,1) 100%);
        &:hover
          background $blue
.contacts-map
  height 300px
  margin-top 30px
  margin-bottom -30px
  @media SM
    height 400px
  @media LG
    height 500px
  #map
    width 100%
    height 100%
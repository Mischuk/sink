.m_header-cart
  anim()
  position absolute
  left 0
  top -400%
  width 100%
  background #fff
  &.open
    top 100%
  @media SM
    max-width 430px
    left auto
    right 0
    box-shadow 0 6px 16px rgba(0,0,0,.1)
  @media LG
    right 50%
    margin-right -585px
  .total-items
    .item
      border-top 1px solid #eeefef
      padding 20px 10px
      @media XS
        clearfix()
      @media SM
        padding 30px
        border-top none
        & + .item
          border-top 1px solid #eeefef
      .image
        width 100%
        @media XS
          float left
          width 25%
        a, img
          display block
        img
          width 100%
      .desc
        padding-top 5px
        @media XS
          float right
          width 75%
          padding-top 0
          padding-left 10px
        .title a
          color #000
          font-weight bold
          text-decoration underline
          &:hover
            text-decoration none
        .details
          clearfix()
          padding-top 10px
          color #999
          font-size 14px
          @media XS
            max-width 260px
          .amt
            float left
          .sum
            float right
          .sum, .sum-value
            position relative
            padding-right 10px
            &:after
              content ''
              background: url('../images/sprite.png') no-repeat -250px 0;
              width: 8px;
              height: 10px;
              position absolute
              right 0
              top 50%
              margin-top -5px
  .total-sum
    padding 15px 5px
    text-align center
    border-top 1px solid #eeefef
    .label
      color $text-muted
    .sum
      position relative
      font-weight bold
      font-size 20px
      padding-right 15px
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -200px 0;
        width: 12px;
        height: 14px;
        position absolute
        right 0
        top 50%
        margin-top -7px
  .action
    background url("../images/patterns/pattern3.jpg") repeat 0 0
    padding 30px 0
    text-align center
    a
      anim()
      position relative
      display inline-block
      vertical-align middle
      padding 20px 60px
      background #fff
      font-size 16px
      color $blue
      border-radius 30px
      box-shadow 0 6px 16px rgba(0,0,0,.1)
      .icon-details
        display inline-block
        vertical-align middle
        background: url('../images/sprite.png') no-repeat -150px 0;
        width: 12px;
        height: 7px;
        margin-left 5px
      &:hover
        color #000
        box-shadow 0 6px 32px rgba(0,0,0,.2)
.m_lead-categories
  background url("../images/patterns/pattern1.jpg") repeat 0 0
  padding 50px 0
  html.no-touchevents &
    background-attachment fixed
  .items
    clearfix()
  .item
    position relative
    height 200px
    padding 10px
    @media XS
      float left
      width 48%
      height 370px
      &:nth-child(2n)
        margin-left 4%
      &:first-child,
      &:first-child + .item
        margin-bottom 4%
    @media MD
      width 32%
      &:nth-child(2n)
        margin-left 2%
      &:first-child,
      &:first-child + .item
        margin-bottom 2%
      &.large
        width 65%
    & + .item
      margin-top 15px
      @media XS
        margin-top 0
    &:hover
      .image a:after
        background rgba(0,0,0,.5)
    .image
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      a
        display block
        size(100%)
        background-repeat no-repeat
        background-position 50%
        background-size cover
        &:after
          anim()
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background rgba(0,0,0,0)
    .frame
      display block
      position relative
      width 100%
      height 100%
      z-index 10
      border 2px solid rgba(255,255,255,.5)
      .details
        position absolute
        left 10px
        bottom 10px
        line-height 1.5
        .title span, .price
          width auto
          color #fff
          background $red
          padding 2px 5px
          font-size 16px
          width auto
          @media MD
            font-size 30px
        .price
          display inline-block
          margin-top 2px
          font-weight bold
          padding-right 20px
          position relative
          @media MD
            padding-right 30px
          &:after
            content ''
            width 9px
            height 11px
            sprite()
            background-position -50px -450px
            position absolute
            right 5px
            top 50%
            margin-top -5.5px
            @media MD
              width 17px
              height 21px
              background-position 0 -450px
              margin-top -10px
              right 10px
  .action
    margin-top 30px
    text-align center
    a
      anim()
      position relative
      display inline-block
      vertical-align middle
      padding 20px 60px
      background #fff
      font-size 16px
      color $blue
      border-radius 30px
      box-shadow 0 6px 16px rgba(0,0,0,.1)
      .icon-details
        display inline-block
        vertical-align middle
        background: url('../images/sprite.png') no-repeat -150px 0;
        width: 12px;
        height: 7px;
        margin-left 5px
      &:hover
        color #000
        box-shadow 0 6px 32px rgba(0,0,0,.2)
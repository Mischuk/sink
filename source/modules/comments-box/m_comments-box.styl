.m_comments-box
  position relative
  background url("../images/patterns/pattern3.jpg") repeat 0 0
  padding 20px
  margin-bottom 30px
  border 1px solid #e5ebec
  border-radius $radius
  .action
    height 60px
    text-align center
    @media SM
      position absolute
      right 20px
      top 50%
      margin-top -30px
    a
      anim()
      position relative
      display inline-block
      vertical-align middle
      padding 20px 30px
      background #fff
      font-size 16px
      color $blue
      border-radius 30px
      box-shadow 0 6px 16px rgba(0,0,0,.1)
      @media XS
        padding 20px 60px
      @media SM
        padding 20px 40px
      span
        display inline-block
        vertical-align middle
        line-height 1
        border-bottom 1px dashed $blue
      &:hover
        color #000
        box-shadow 0 6px 32px rgba(0,0,0,.2)
        span
          border-color #000
  .desc
    color #555555
    font-size 14px
    margin-bottom 20px
    @media SM
      padding-right 220px
      margin-bottom 0

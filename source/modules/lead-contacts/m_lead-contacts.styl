.m_lead-contacts
  padding 50px 0
  background url("../images/patterns/pattern3.jpg") repeat 0 0
  html.no-touchevents &
    background-attachment fixed
  h2
    font-size 24px
    margin-top -5px
    font-weight bold
    text-transform uppercase
    text-align center
    margin-bottom 40px
  .info
    background url("../images/patterns/pattern4.jpg") repeat 0 0
    text-align center
    color #fff
    padding 20px
    position relative
    z-index 10
    @media XS
      float right
      width 50%
      height 300px
      padding 0 15px
    @media SM
      width 35%
    @media MD
      width 30%
      text-align left
      padding-left 30px
    .locate
      font-size 30px
    .address, .tel
      font-size 14px
      margin-top 10px
    .action
      margin-top 30px
      text-align center
      @media MD
        text-align left
      a
        anim()
        position relative
        display inline-block
        vertical-align middle
        padding 20px 30px
        background #fff
        font-size 16px
        color $blue
        border-radius 30px
        box-shadow 0 6px 16px rgba(0,0,0,.1)
        @media XS
          padding 20px 30px
        .icon-details
          display inline-block
          vertical-align middle
          background: url('../images/sprite.png') no-repeat -150px 0;
          width: 12px;
          height: 7px;
          margin-left 5px
        &:hover
          color #000
          box-shadow 0 6px 32px rgba(0,0,0,.2)
  .map
    height 300px
    width 100%
    @media XS
      float left
      width 50%
    @media SM
      width 65%
    @media MD
      width 70%
    #map
      width 100%
      height 100%
.m_detail-filters
  background url("../images/patterns/pattern3.jpg") repeat 0 0
  border 1px solid #e5ebec
  margin-top 30px
  @media SM
    margin-top 0
  .detail-filters-header
    position relative
    padding 25px
    .toggle
      height 60px
      text-align center
      margin-bottom 20px
      @media MD
        width 270px
        position absolute
        left 25px
        top 50%
        margin-top -30px
        margin-bottom 0
      a
        anim()
        position relative
        display inline-block
        vertical-align middle
        padding 20px 30px
        background #fff
        font-size 16px
        color $blue
        border-radius 30px
        box-shadow 0 6px 16px rgba(0,0,0,.1)
        @media XS
          padding 20px 60px
        span
          display inline-block
          vertical-align middle
          line-height 1
          border-bottom 1px dashed $blue
        &:hover
          color #000
          box-shadow 0 6px 32px rgba(0,0,0,.2)
          span
            border-color #000
    .desc
      width 100%
      font-size 14px
      line-height 20px
      color $text-muted
      text-align center
      @media MD
        text-align left
        padding-left 300px
  .detail-filters-body
    display none
    padding 25px
    padding-top 0
    .columns
      border-top 1px solid #e5ebec
      border-bottom 1px solid #e5ebec
      overflow hidden
      padding 25px 0
      @media XS
        padding-top 0
      .column
        margin-bottom 30px
        &:last-child
          margin-bottom 0
        @media XS
          float left
          width 100%
          margin-bottom 0
          margin-top 30px
          &:nth-child(3),
          &:nth-child(4)
            width 50%
        @media MD
          float left
          width 25%
          padding-right 40px
          &:nth-child(1),
          &:nth-child(2)
            width 30%
          &:nth-child(3),
          &:nth-child(4)
            width 20%
    .f-title
      font-size 14px
      margin-bottom 10px
    .inputs
      .checkbox
        margin-bottom 10px
        &:last-child
          margin-bottom 0
    .bottom-options
      padding-top 25px
      cursor default
      .reset,
      .submit
        anim()
        padding 10px 10px
        border-radius $radius
        font-size 12px
        text-transform uppercase
        background #fff
        color $blue
        border 1px solid $blue
        background none
        margin-right 10px
        @media XS
          padding 10px 15px
        &:hover
          background $blue
          color #fff
    .price-range
      margin-bottom 10px
      padding-left 10px
      padding-right 10px
      .noUi-target
        background #d1d9da
        border-radius 0
        border none
        box-shadow none
      .noUi-horizontal
        height 4px
        .noUi-handle
          left -9px
      .noUi-connect
        background $red
        box-shadow none
      .noUi-handle
        width 16px
        height 16px
        border 2px solid #e97072
        box-shadow 0 2px 2px rgba(0,0,0,.1)
        border-radius 50%
        &:after,
        &:before
          display none
      .noUi-pips-horizontal
        height 10px
        padding 0
        top -3px
        // z-index 10
      .noUi-marker-horizontal.noUi-marker-large,
      .noUi-marker-horizontal.noUi-marker
        height 10px
        background #d1d9da
      .noUi-value-horizontal
        font-size 12px
        font-weight normal
        color #999
        top -20px
        transform none
        &:last-child
          left auto !important
          right 0 !important
    .price-inputs
      clearfix()
      margin-bottom 40px
      input
        width 48%
        height 36px
        border-radius $radius
        border 1px solid #d1d9da
        padding 0 10px
        font-size 12px
        color #555
      #width-input-start,
      #depth-input-start
        float left
      #width-input-finish,
      #depth-input-finish
        float right
  .ask-form
    .columns
      overflow visible
      margin-bottom 20px
      @media XS
        padding-top 20px
      @media MD
        .form-row
          width 49%
          display inline-block
          vertical-align top
          margin-top 0 !important
          .input
            float none
            width 94%
            margin-left 0 !important
            & + .input
              margin-top 20px !important
    .form-row
      clearfix()
      .input
        @media XS
          float left
          width 48%
        & + .input
          margin-top 20px
          @media XS
            margin-top 0
            margin-left 4%
      & + .form-row
        margin-top 20px
      textarea,
      input
        background #fff
        anim()
        border 1px solid $border
        border-radius $radius
        padding 0 10px
        background #fff
        font-size 16px
        width 100%
        &:focus
          font-weight normal
          border-color #fff
          box-shadow 0 6px 32px rgba(0,0,0,.2)
      input
        height 40px
      textarea
        padding 10px
        min-height 100px
        resize none
      .reset
        width 105px
        display inline-block
        vertical-align middle
        text-align center
        height 35px
        line-height 35px
        border 1px solid $blue
        color $blue
        background none
        border-radius $radius
        anim()
        font-size 12px
        text-transform uppercase
        @media XS
          width 115px
        &:hover
          background $blue
          color #fff
      .submit
        display inline-block
        vertical-align middle
        text-align center
        width 105px
        height 35px
        line-height 35px
        border-radius $radius
        font-size 12px
        text-transform uppercase
        border none
        color #fff
        background: rgba(57,144,236,1);
        background: -moz-linear-gradient(top, rgba(57,144,236,1) 0%, rgba(20,118,223,1) 100%);
        background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(57,144,236,1)), color-stop(100%, rgba(20,118,223,1)));
        background: -webkit-linear-gradient(top, rgba(57,144,236,1) 0%, rgba(20,118,223,1) 100%);
        background: -o-linear-gradient(top, rgba(57,144,236,1) 0%, rgba(20,118,223,1) 100%);
        background: -ms-linear-gradient(top, rgba(57,144,236,1) 0%, rgba(20,118,223,1) 100%);
        background: linear-gradient(to bottom, rgba(57,144,236,1) 0%, rgba(20,118,223,1) 100%);
        @media XS
          width 115px
        &:hover
          background $blue
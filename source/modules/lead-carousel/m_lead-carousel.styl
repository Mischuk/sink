.m_lead-carousel
  height 400px
  overflow hidden
  position relative
  @media SM
    height 500px
  .lead-carousel
    position relative
    height 400px
    @media SM
      height 500px
    .slick-arrow
      position absolute
      top 50%
      width 24px
      height 120px
      margin-top -60px
      sprite()
      background-color transparent
      border none
      z-index 1
      text-indent -9999px
      opacity .5
      display none !important
      @media SM
        display block !important
      &:hover
        opacity 1
      &.slick-prev
        left 10px
        background-position -50px -250px
        @media screen and (min-width: 1400px)
          left 50%
          margin-left -652px
      &.slick-next
        right 10px
        background-position -100px -250px
        @media screen and (min-width: 1400px)
          right 50%
          margin-right -652px
    .slick-dots
      position absolute
      left 0
      bottom 20px
      width 100%
      text-align center
      display none !important
      @media XS
        display block !important
      li
        display inline-block
        vertical-align middle
        margin-left 7px
        margin-right 7px
        button
          width 16px
          height 16px
          border-radius 50%
          text-indent -9999px
          background none
          border 3px solid #dcdcdc
        &.slick-active button
          position relative
          border-color #000
          &:after
            content ''
            width 6px
            height 6px
            position absolute
            left 50%
            top 50%
            margin-left -3px
            margin-top -3px
            background #000
            border-radius 50%

  .slide
    position relative
    height 400px
    @media SM
      height 500px
    .image
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-repeat no-repeat
      background-position left center
      background-size cover
      @media SM
        background-position 50%
    .text
      position relative
      z-index 10
      height 100%
      text-align center
      padding 0 40px
      @media SM
        text-align left
        padding-right 50%
        padding-left 100px
      @media LG
        max-width 1200px
        margin 0 auto
        padding-right 40%
      @media screen and (min-width: 1400px)
        padding-left 15px
      h1
        font-weight 900
        font-size 32px
        line-height 1
        margin-bottom 20px
      p
        color $text-muted
        font-size 16px
        font-style italic
        line-height 1.5
        @media XS
          font-size 18px
      .action
        margin-top 20px
        a
          anim()
          position relative
          display inline-block
          vertical-align middle
          padding 20px 60px
          background #fff
          font-size 16px
          color $blue
          border-radius 30px
          box-shadow 0 6px 16px rgba(0,0,0,.1)
          .icon-details
            display inline-block
            vertical-align middle
            background: url('../images/sprite.png') no-repeat -150px 0;
            width: 12px;
            height: 7px;
            margin-left 5px
          &:hover
            color #000
            box-shadow 0 6px 32px rgba(0,0,0,.2)

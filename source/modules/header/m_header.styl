.m_header
  position relative
  z-index 1000
  .top-header,
  .bottom-header
    position relative
    z-index 1000
  .top-header
    background #252525
    height 42px
    color #fff
    .menu
      display none
      float left
      @media SM
        display block
      ul
        cursor default
        li
          display inline-block
          vertical-align middle
          line-height 42px
          & + li
            position relative
            padding-left 20px
            &:after
              content ''
              width 1px
              height 14px
              position absolute
              left 9px
              top 50%
              margin-top -7px
              background rgba(255,255,255,.3)
          a
            anim()
            display inline-block
            vertical-align middle
            color #fff
            text-transform uppercase
            font-size 12px
            line-height 1
            border-bottom 1px solid rgba(255,255,255,.3)
            &:hover
              color $red
              border-color transparent
    .tel
      float left
      position relative
      padding-left 25px
      line-height 42px
      @media SM
        float right
        padding-right 40px
      &:after
        content ''
        sprite()
        size(16px)
        background-position -100px 0
        margin-top -8px
        position absolute
        left 0
        top 50%
      a
        color #fff
        cursor default
        font-weight bold
        font-size 13px
    .callback
      float right
      height 100%
      background #fff
      line-height 42px
      a
        anim()
        display block
        height 100%
        width auto
        background $red
        color #fff
        padding 0 5px
        &:hover
          background $blue
        @media XS
          text-transform uppercase
          padding 0 15px
  .bottom-header
    background #fff
    @media XS
      height 93px
    .logo
      width 159px
      height 54px
      margin 10px auto
      @media XS
        float left
        margin 19.5px 0
      a
        display block
        size(100%)
        background url("../images/logo.png") no-repeat 0 0
        @media only screen and (-webkit-min-device-pixel-ratio: 2), only screen and (min-device-pixel-ratio: 2)
          background-image url('../images/logo@2x.png')
          background-size $sprite
          background-size contain
    .menu
      display none
      @media SM
        display block
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        padding 0 200px
        text-align center
      @media MD
        padding 0 250px
      @media LG
        padding-left 300px
        padding-right 350px
      ul
        display table
        width 100%
        height 100%
      li
        display table-cell
        vertical-align middle
        @media MD
          padding 0 10px
        a
          anim()
          display inline-block
          vertical-align middle
          line-height 1
          color #000
          border-bottom 1px solid rgba(0,0,0,.3)
          &:hover
            color $blue
            border-color transparent
          @media MD
            font-size 18px

    .options
      clearfix()
      position relative
      float right
      .search,
      .compare,
      .cart
      .mobile-menu
        position relative
        float right
        width 65px
        height 65px
        @media XS
          margin 14px 0
        @media MD
          width 45px
      .search,
      .compare,
      .cart
        a
          position relative
          display block
          size(65px)
          @media MD
            width 45px
          .icon
            position absolute
            left 50%
            top 50%
            sprite()
          .total
            position absolute
            right 13px
            top 13px
            background $red
            color #fff
            size(20px)
            line-height 20px
            text-align center
            border-radius 50%
            font-size 12px
            @media MD
              right 5px
      .mobile-menu
        @media SM
          display none
      .search
        a
          .icon
            margin-top -8px
            margin-left -8px
            width 16px
            height 16px
            background-position -450px 0px
          &.open,
          &:hover
            .icon
              background-position -450px -50px
      .compare
        a
          .icon
            margin-top -7px
            margin-left -8px
            width 14px
            height 16px
            background-position -400px -50px
          &:hover
            .icon
              background-position -350px -50px
      .cart
        @media MD
          width auto
        .total-sum
          display none
          @media MD
            display block
            position absolute
            right 0
            bottom 5px
            font-weight bold
            color #555
            font-size 14px
            cursor default
        a
          @media MD
            width auto
          .icon
            margin-top -8px
            margin-left -8px
            size(16px)
            background-position -300px -50px
            @media MD
              left 20px
          &.open,
          &:hover
            .icon
              background-position -250px -50px
            .label
              color $blue
          .total
            @media MD
              right auto
              left 20px
          .label
            display none
            @media MD
              anim()
              display block
              line-height 65px
              padding-left 40px
              color #000

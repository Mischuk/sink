.m_lead-sales
  padding 50px 0
  background #fff
  .slick-slider
    position static
  .slick-arrow
    position absolute
    top 0
    width 13px
    height 20px
    background none
    border none
    text-indent -9999px
    sprite()
    &.slick-disabled
      opacity .25
      cursor default
    &.slick-next
      right 25px
      background-position -250px -250px
      &:hover
        background-position -250px -300px
    &.slick-prev
      background-position -200px -250px
      right 55px
      &:hover
        background-position -200px -300px
  h2
    font-size 24px
    margin-top -5px
    font-weight bold
    text-transform uppercase
    padding-right 70px
    padding-left 10px
    text-align left
    @media XS
      padding-left 70px
      text-align center
  .action
    margin-top 30px
    text-align center
    a
      anim()
      position relative
      display inline-block
      vertical-align middle
      padding 20px 60px
      background #fff
      font-size 16px
      color $blue
      border-radius 30px
      box-shadow 0 6px 16px rgba(0,0,0,.1)
      .icon-details
        display inline-block
        vertical-align middle
        background: url('../images/sprite.png') no-repeat -150px 0;
        width: 12px;
        height: 7px;
        margin-left 5px
      &:hover
        color #000
        box-shadow 0 6px 32px rgba(0,0,0,.2)
  .lead-sales-carousel
    margin-top 30px
    .slide
      padding 10px
.m_menu-phone
  anim()
  position absolute
  left 0
  top -500%
  width 100%
  height auto
  background #fff
  z-index 750
  &.open
    top 100%
  .item
    border-top 1px solid #eeefef
    &.dropdown
      .category
        position relative
        a:after
          content '+'
          size(24px)
          border 2px solid #999
          position absolute
          right 10px
          top 50%
          margin-top -12px
          border-radius 50%
          color #999
          text-align center
          font-weight bold
    &.open
      .category
        background url("../images/patterns/pattern4.jpg") repeat 0 0
        a:after
          border-color #fff
          color #fff
        a
          color #fff
      ul
        height auto
        padding 10px 20px
    .category
      a
        display block
        color #000
        font-size 18px
        padding 15px 10px
    ul
      height 0
      overflow hidden
      background url("../images/patterns/pattern3.jpg") repeat 0 0
      a
        display block
        padding 10px 0
        color $blue
        &:hover
          color #000


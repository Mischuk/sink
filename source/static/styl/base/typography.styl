h1, h2, h3, h4, h5, h6
  line-height 1.2
  font-weight bold
h1
  font-size 36px
h2
  font-size 30px
h3
  font-size 24px
h4
  font-size 18px
h5
  font-size 14px
h6
  font-size 12px

p
  margin-top 0
  margin-bottom 20px

.red
  color $red
.page-heading
  border-bottom 1px solid #eeefef
  h2
    font-size 30px
    font-weight bold
    text-transform uppercase
    padding 10px 0
article
  img
    width 100%
    height auto
    margin-bottom 20px
    @media screen and (min-width: 568px)
      float left
      max-width 100%
      width auto
      margin-right 20px
      margin-bottom 0
    @media SM
      float none
      width 100%
      margin-right 0
      margin-bottom 20px
    @media MD
      float left
      max-width 100%
      width auto
      margin-right 20px
      margin-bottom 0
  h2
    position relative
    font-size 24px
    text-transform uppercase
    font-weight bold
    margin-bottom 40px
    &:after
      content ''
      width 70px
      height 2px
      background $blue
      position absolute
      left 0
      bottom -19px
  h3
    font-size 18px
    text-transform uppercase
    font-weight bold
    margin-bottom 20px
  h4
    font-size 14px
    text-transform uppercase
    font-weight bold
    margin-bottom 10px
  a
    color $blue
    text-decoration underline
    &:hover
      color #000
      text-decoration none
  p
    font-size 14px
    line-height 22px
    color $text-muted
    &.lead-paragraph
      font-size 16px
      font-style italic
    &:last-child
      margin-bottom 0
  ul, ol
    margin-bottom 20px
    font-size 14px
    padding-left 10px
    li
      position relative
      padding 10px 0
  ul
    li
      position relative
      &:before
        content ''
        width 4px
        height 7px
        background url("../images/ul-list.png") no-repeat 0 0
        position absolute
        left -10px
        top 14px
      ul
        padding-left 0
        margin-bottom 0
        li
          padding 7px 0
          &:before
            display none !important
    &.large
      font-size 16px
      li ul
        margin-top 10px
      li:before
        top 16px
  ol
    padding-left 0
    li
      counter-increment step-counter
      &:before
        content counter(step-counter) '. '
        color $blue
  .m_detail-filters
    margin-bottom 30px
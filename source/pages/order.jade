extends ../modules/layout/layout.jade

block title
  title Оформление заказа

block content
  main
    .m_breadcrumbs
      ul
        li: a(href="#") Главная
        li: a(href="#") Оформление заказа
    .page-heading
      h2 Оформление заказа
    .m_order
      .order-bill
        .positions
          .items
            .label Товаров на сумму:
            .value: span 20 500
          .delivery
            .label Доставка:
            .value: span 500
        .total
          .label Итого:
          .value: span 21 000
      form.order-steps
        .step.step-1.current
          .step-header <span>Шаг 1.</span> Доставка
          .step-body
            .delivery-self(data-order-delivery="Самовывоз")
              .default-icon
                .icon
                .label: span Самовывоз
              .delivery-form
                .default-icon-active
                  .icon
            .delivery-courier(data-order-delivery="Доставка курьером")
              .default-icon
                .icon
                .label: span Доставка курьером
              .delivery-form
                .default-icon-active
                  .icon
                .form-section
                  .form-row
                    .label Местоположение: <span class="required">*</span>
                    .input: input(class="order-delivery-address required" type="text" placeholder="г. Москва, Россия")
                  .form-row
                    .label Индекс: <span class="required">*</span>
                    .input: input(class="order-delivery-index required" type="text" placeholder="101000")
                  .form-row
                    .remark Выберите свой городе в списке. Если вы не нашли свой город, выберите "другое местоположение", а город впишите в поле "Город"
            .delivery-transport(data-order-delivery="Доставка транспортной компанией")
              .default-icon
                .icon
                .label: span Доставка транспортной компанией
              .delivery-form
                .default-icon-active
                  .icon
                .form-section
                  .form-row
                    .label Местоположение: <span class="required">*</span>
                    .input: input(class="order-delivery-address required" type="text" placeholder="г. Москва, Россия")
                  .form-row
                    .label Индекс: <span class="required">*</span>
                    .input: input(class="order-delivery-index required" type="text" placeholder="101000")
                  .form-row
                    .remark Выберите свой городе в списке. Если вы не нашли свой город, выберите "другое местоположение", а город впишите в поле "Город"
          .step-footer
            button(class="step-next" type="button") Далее

        .step.step-2
          .step-header <span>Шаг 2.</span> Желаемая дата и время доставки
          .step-body
            .form-date
              .form-section
                .form-row
                  .label Дата доставки:
                  .inputs
                    .input
                      input(class="order-date-day" type="text" value="" placeholder="День")
                    .input
                      input(class="order-date-month" type="text" value="" placeholder="Месяц")
              .form-section
                .form-row
                  .label Время:
                  .inputs
                    .input
                      input(class="order-date-from" type="text" value="" placeholder="от 00:00")
                    .input
                      input(class="order-date-to" type="text" value="" placeholder="до 00:00")
          .step-footer
            button(class="step-prev" type="button") Назад
            button(class="step-next" type="button") Далее
        .step.step-3
          .step-header <span>Шаг 3.</span> Оплата
          .step-body
            .form-pay
              .checkbox
                label
                  input(type="checkbox" name="order-pay" value="Наличными курьеру" checked)
                  span.icon
                  span.label Наличными курьеру
              .checkbox
                label
                  input(type="checkbox" name="order-pay" value="Безналичный платеж")
                  span.icon
                  span.label Безналичный платеж
              .checkbox
                label
                  input(type="checkbox" name="order-pay" value="Онлайн")
                  span.icon
                  span.label Онлайн
          .step-footer
            button(class="step-prev" type="button") Назад
            button(class="step-next" type="button") Далее
        .step.step-4
          .step-header <span>Шаг 4.</span> Покупатель
          .step-body
            .form-user
              .form-section
                .form-row
                  .label ФИО:<span class="required">*</span>
                  .input: input(class="order-delivery-name required" type="text" placeholder="")
                .form-row
                  .label Email:<span class="required">*</span>
                  //- .input: input(class="order-delivery-email required" type="email" placeholder="")
                  .input
                    input(id="step-4-email" class="order-delivery-email required" name="step-4-email" type="email" data-validation="[EMAIL]" data-validation-message=" ")
                .form-row
                  .label Телефон:<span class="required">*</span>
                  .input: input(class="order-delivery-tel required" type="tel" placeholder="")
                .form-row
                  .label Комментарий к заказу:
                  .input: textarea
          .step-footer
            button(class="step-prev" type="button") Назад
            button(class="step-next" type="button") Далее
        .step.step-final
          .step-header Подтверждение заказа
          .step-body
            .row
              .label ФИО:
              .value(data-order="username")
            .row
              .label Email:
              .value(data-order="email")
            .row
              .label Телефон:
              .value(data-order="tel")
            .row
              .label Доставка:
              .value(data-order="delivery")
            .row
              .label Адрес доставки:
              .value(data-order="address")
            .row
              .label Дата и время доставки:
              .value(data-order="time")
            .row
              .label Оплата:
              .value(data-order="pay")
          .order-total-items
            .m_cart
              table
                tr
                  th
                  th Наименование
                  th Цена
                  th Количество
                  th Сумма
                tr
                  td
                    .preview: img(src="images/content/media/1.png" alt="")
                  td
                    .details
                      .title: a(href="#") Душевая кабина Jacuzzi Frame
                      .articul
                        .label Артикул:
                        .value 9448-2721254
                      .produced
                        .label Производитель:
                        .value Jacuzzi
                      .status-compare
                        .status
                          .available В наличии
                  td
                    .price
                      .current 1 000
                  td
                    .total-items 12 шт.
                  td
                    .total-sum
                      i Итого:
                      span 12 000
                tr
                  td
                    .preview: img(src="images/content/media/1.png" alt="")
                  td
                    .details
                      .title: a(href="#") Душевая кабина Jacuzzi Frame
                      .articul
                        .label Артикул:
                        .value 9448-2721254
                      .produced
                        .label Производитель:
                        .value Jacuzzi
                      .status-compare
                        .status
                          .available В наличии
                  td
                    .price
                      .current 1 000
                  td
                    .total-items 12 шт.
                  td
                    .total-sum
                      i Итого:
                      span 12 000
              .cart-sum-result
                .total.delivery
                  .label Доставка:
                  .sum: span 500
                .total
                  .label Итого к оплате:
                  .sum: span 24 000
              .cart-final
                .step-footer
                  button(class="step-prev" type="button") Назад
                  .final-submit: a(href="order-completed.html") Оформить заказ